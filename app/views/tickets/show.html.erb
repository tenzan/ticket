<div id="ticket">
  <header>
    <h1><%= @client.name %></h1>
  </header>
  <header>
    <h2><%= @ticket.subject %></h2>



    <ul class='actions'>
    	<li><%= link_to 'Edit Ticket', [:edit, @client, @ticket], class: 'edit' %></li>
    	<li><%= link_to "Delete Ticket", [@client, @ticket], method: :delete,
	     data: { confirm: "Are you sure you want to delete this ticket?"},
	     class: "delete" %></li>
    </ul>
  </header>

  <table id="attributes">
     <tr>
       <th>Author:</th>
       <td><%= @ticket.author.email %></td>
     </tr>
     <tr>
       <th>Created:</th>
       <td><%= time_ago_in_words(@ticket.created_at) %> ago</td>
      </tr>
  </table>
  <%= simple_format(@ticket.details) %>
</div>
